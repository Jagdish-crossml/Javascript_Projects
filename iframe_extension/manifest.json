{
    "manifest_version": 2,
    "name": "Iframe extension",
    "description": "Interact with iframes",
    "homepage_url": "http://127.0.0.1:5503/i_frame.html",
    "version": "1.0",
    "page_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "main.js",
                "jquery-3.6.0.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        },
        {
            "js": [
                "window.js",
                "jquery-3.6.0.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "https://codeforgeek.com"
    ],
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "https://*/*"
    ]
}